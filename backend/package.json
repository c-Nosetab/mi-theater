{
  "name": "my-theater-backend",
  "version": "1.0.0",
  "description": "Mi-Theater is an application to help you find the best local theater productions in your area. It is a full-stack application that uses a PostgreSQL database, Express.js server, and AngularJS front-end.",
  "main": "index.js",
  "config": {
    "port": 3000,
    "testEnvironment": "test"
  },
  "scripts": {
    "start": "NODE_ENV=local npm run build",
    "generate": "drizzle-kit generate:pg --config ./src/db/drizzle.config.ts",
    "build": "npm run prebuild && tsc-watch --onSuccess \"node dist/src/app.js\"",
    "start:prod": "npm run build:prod",
    "build:prod": "npm run prebuild && tsc && node dist/src/app.js",
    "move-assets": "node ./scripts/moveAssets.js",
    "prebuild": "rm -rf dist && mkdir dist && mkdir dist/src && mkdir dist/src/assets && npm run move-assets",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit && npm run test:integration -- --exit",
    "cover": "nyc npm run test && open ./.nyc_output/reports/lcov-report/index.html",
    "test:integration": "export NODE_ENV=test && mocha test/integration",
    "test:unit": "export NODE_ENV=test && mocha ./test/unit",
    "test:integration:watch": "npm run test:integration -- --watch",
    "test:unit:watch": "npm run test:unit -- --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "express": "^4.19.2",
    "get-routes": "^2.1.6",
    "nodemon": "^2.0.22",
    "pg": "^8.11.5",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.1.14"
  },
  "devDependencies": {
    "@babel/register": "^7.21.0",
    "@types/chai": "^4.3.16",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.32",
    "@types/pg": "^8.11.6",
    "@types/sinon": "^10.0.20",
    "@types/supertest": "^2.0.16",
    "@types/validator": "^13.11.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^4.4.1",
    "drizzle-kit": "^0.20.18",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "mocha": "^10.4.0",
    "nock": "^13.5.4",
    "sinon": "^15.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.4.5"
  }
}
